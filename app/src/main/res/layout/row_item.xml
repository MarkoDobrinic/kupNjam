<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/productImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/ic_launcher"
                        android:scaleType="centerCrop"
                        android:clickable="false"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:alpha="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/productName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="#646464"
                            android:clickable="false"
                            android:text="PRODUCT_NAME"
                            android:textSize="19dp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="18dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/productStoreImage"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="fitStart"
                            android:layout_marginLeft="5dp"
                            android:clickable="false"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            >

                            <TextView
                                android:id="@+id/productDiscPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="DISCOUNT_PRICE"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="16dp"
                                android:textColor="#646464"
                                android:textStyle="bold"
                                android:clickable="false"/>

                            <TextView
                                android:clickable="false"
                                android:id="@+id/productPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="PRICE"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="10dp"
                                android:textColor="#ff4800"
                                android:textStyle="italic" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--<com.project.markodobrinic1gmailcom.kupnjam.ui.custom.CounterView-->
                    <!--android:id="@+id/counterView"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="2.3" />-->
                    <!---->


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_product_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    >

                <Button
                    android:id="@+id/add_product"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/row_add_product"
                    android:alpha="1"
                    android:focusable="true"
                    android:duplicateParentState="true"
                    android:layout_gravity="right"
                    />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/productDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="DATE_TEXT"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="13dp"
                android:textColor="#118402"
                android:clickable="false"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
